<Page x:Class="StockMarket.Pages.AddSharePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StockMarket"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="AddSharePage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Height="200" Margin="10" VerticalAlignment="Top" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,10">
                <Label Height="25" Margin="0,5,0,0">WKN:</Label>
                <Label Height="25" Margin="0,5,0,0">ISIN:</Label>
                <Label Height="25" Margin="0,5,0,0">Name:</Label>
                <Label Height="25" Margin="0,5,0,0">Purchase price:</Label>
                <Label Height="25" Margin="0,5,0,0">Website:</Label>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1" Margin="0,10">
                <TextBox Height="25" Margin="0,5,0,0" Name="TB_WKN"></TextBox>
                <TextBox Height="25" Margin="0,5,0,0" Name="TB_ISIN"></TextBox>
                <TextBox Height="25" Margin="0,5,0,0" Name="TB_Name"></TextBox>
                <TextBox Height="25" Margin="0,5,0,0" Name="TB_Price"></TextBox>
                <TextBox Height="25" Margin="0,5,0,0" Name="TB_WebSite"></TextBox>
            </StackPanel>
        </Grid>
        <UniformGrid Grid.Row="1">
            <Button Height="30" Margin="10" VerticalAlignment="Top" Click="B_AutoFill_Click">AutoFill</Button>
            <Button Height="30" Margin="10" VerticalAlignment="Top" Click="B_Confirm_Click">Confirm</Button>
        </UniformGrid>
    </Grid>
</Page>
