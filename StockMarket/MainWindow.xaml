<Window x:Class="StockMarket.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockMarket"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <!-- the StackPanel containing the navigation Buttons-->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10,5">
                <Button Height="20" Width="100" Click="B_AddShare_Click">Add share</Button>
                <Button Height="20" Width="100" Click="B_AddOrder_Click">Add order</Button>
                <Button Height="20" Width="100" Click="B_Overview_Click">Order cverview</Button>
            </StackPanel>

            <!--The Frame containing the content selected by the navigation-->
            <Frame Name="MainFrame" NavigationUIVisibility="Hidden">

            </Frame>
        </StackPanel>

    </Grid>
</Window>
